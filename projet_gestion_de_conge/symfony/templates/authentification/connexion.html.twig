                        <label for="username" class="mb-1"><strong>{% trans %}email.identifiant{% endtrans %}</strong></label>
                        <input type="email" id="username" value="{{last_username}}" name="_username" class="form-control"  aria-describedby="emailHelp"
                            placeholder="{% trans %}email.placeholder{% endtrans %}">
                    </div>
                    <div class="form-group">
                        <label for="password" class="mb-1"><strong>{% trans %}motDePasse.password{% endtrans %}</strong></label>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="{% trans %}motDePasse.placeholder{% endtrans %}">
                    </div>
                    {% if is_granted('ROLE_RESPONSABLE') %}
                    {% else %}
                    {% endif %}
