{% block title %}{% trans %} axioconges.connexion {% endtrans %}{% endblock %}

{% block body %}
    <div class="container">

    {% if error %}
        <div class="alert alert-danger  mb-0">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

        <div class="card-login__wrapper">
            <div class="card-login shadow mb-5">
